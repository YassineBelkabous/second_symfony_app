<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<div class="container">
      <h1 class="text-center my-5">Articles</h1>
      <p><a class="btn btn-primary" href="{{ path('add_article') }}">Add an article</a></p>
    <div class="row">
        <div class="col-md-8 offset-md-2">
         {% for article in articles %}
            <div class="card mb-3">
                <div class="card-body">
                    <a  href="{{ path('modify_article' ,{'id' : article.id }) }}">Modify</a>
                    <h4 class="card-title">{{article.title}}</h4>
                    <p class="card-text">{{article.text}}</p>
                    <p class="card-text"><small class="text-muted">Written By : {{article.user.name}}</small></p>
                    <p class="card-text"><small class="text-muted">{{article.category.name}}</small></p>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
</div>

